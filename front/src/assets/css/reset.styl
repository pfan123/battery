html,body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, textarea, p, blockquote, th, td, hr, button, article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section 
  padding 0
  margin 0

body
    font-family '微软雅黑',YaHei,tahoma,arial,"Hiragino Sans GB"
    font-size 14px
    background-color lighten(#eceef1, 30%)
    margin 0
    color #34495e
    background #f4f4f4

.line1
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

.line2, .line3 
    overflow hidden
    text-overflow ellipsis
    word-break break-all
    display -webkit-box
    -webkit-line-clamp 2
    -webkit-box-orient vertical

.line3
    -webkit-line-clamp 3

img 
    border 0 none

ul, ol 
    list-style none

input, textarea, select, button
    resize none
    font-family inherit
    font-size inherit
    font-weight inherit
    outline none

a
    color #34495e
    text-decoration none
    outline none
    text-decoration none
    -webkit-tap-highlight-color rgba(255,0,0,0)

i, em 
      font-style normal

.view
  // max-width 800px
  // margin 0 auto
  // position relative

.fade-enter-active, .fade-leave-active
    transition all .2s ease

.fade-enter, .fade-leave-active
    opacity 0

.g_cf:after
    display block
    content '\20'
    clear both
    height 0
    visibility hidden
.g_cf
    *zoom 1
    overflow hidden

@media (max-width 860px)
  .header .inner
    padding 15px 30px

@media (max-width 600px)
  .header
    .inner
      padding 15px
    a
      margin-right 1em
    .github
      display none